{
  "name": "Lean_Case_Study",
  "version": "1.0.0",
  "description": "Playwright E2E test automation framework for Saucedemo website - Enterprise-grade automated testing with Page Object Model",
  "main": "index.js",

  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:e2e": "playwright test tests/e2e-purchase-flow.spec.js",
    "test:chrome": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:report": "playwright show-report",
    "test:clean": "rimraf test-results playwright-report screenshots"
  },

  "keywords": [
    "playwright",
    "e2e-testing",
    "automation",
    "saucedemo",
    "page-object-model",
    "test-framework"
  ],

  "author": "Altaf Shaikh",
  "license": "ISC",
  "type": "commonjs",

  "dependencies": {
    "playwright": "^1.57.0"
  },

  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "rimraf": "^5.0.5"
  }
}

